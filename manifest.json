{
	"manifest_version": 2,
	"name": "ARP Spoof Sniffer",
	"version": "0.1",
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content.js" ]
		}
	],
	"background": {
		"scripts": [ "background.js" ]
	},
	"browser_action": {
		"default_icon": "arp.png",
		"default_popup": "safe.html",
		"default_title": "ARP Spoof Sniffer"
	},
	"permissions": [ "activeTab" ],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
